<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TDQ.MainPage"
             x:Name="MainContentPage">

    <AbsoluteLayout>

        <Image x:Name="ImgBg"
               Aspect="AspectFill"
               AbsoluteLayout.LayoutBounds="0,0,1,1"
               AbsoluteLayout.LayoutFlags="All"/>

        <StackLayout AbsoluteLayout.LayoutBounds="0,0,1,1"
                     AbsoluteLayout.LayoutFlags="All">

            <Label Text="You currently have no questionnaires, please press the button below right to send a new questionnaire"
                   HorizontalTextAlignment="Center"
                   FontAttributes="Italic"
                   Margin="10"
                   Style="{DynamicResource labelStyle}"/>

            <Button x:Name="BtnAddQuestionnaire"
                    VerticalOptions="EndAndExpand"
                    Margin="30,0,30,10"
                    Text="Add Questionnaire"
                    Style="{DynamicResource buttonStyle}"
                    Clicked="BtnAddQuestionnaire_Clicked"/>
        </StackLayout>
    </AbsoluteLayout>

</ContentPage>
