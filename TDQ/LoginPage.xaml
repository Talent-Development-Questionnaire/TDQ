<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TDQ.LoginPage">

    <StackLayout>
        <StackLayout VerticalOptions="CenterAndExpand"
                 Margin="30" BackgroundColor="WhiteSmoke">
            <Entry Placeholder="Email Address" PlaceholderColor="{DynamicResource TertiaryTextColour}" Opacity="0.6"/>

            <Entry Placeholder="Password" PlaceholderColor="{DynamicResource TertiaryTextColour}"/>

            <Button x:Name="BtnLogin" Text="Log In" Clicked="BtnLogin_Clicked" Margin="40"/>

        </StackLayout>
    </StackLayout>
</ContentPage>