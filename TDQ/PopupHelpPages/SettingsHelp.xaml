<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TDQ.PopupHelpPages.SettingsHelp" 
             BackgroundColor="Transparent">

    <StackLayout VerticalOptions="CenterAndExpand">
        <Frame Margin="50"
               Padding="30"
               BackgroundColor="#663A3A3A"
               CornerRadius="30"
               HasShadow="True">
            <StackLayout>
                <Label Text="Help"
                       TextColor="White"
                       HorizontalTextAlignment="Center"
                       FontSize="36"/>
                <Label Text="In the settings page you can adjust colour themes, font sizes, add backgrounds and log out or delete your account."
                       TextColor="White"
                       HorizontalTextAlignment="Center"/>
                <Button Text="Okay"
                        x:Name="BtnOkay"
                        Clicked="BtnOkay_Clicked"
                        Style="{DynamicResource buttonStyle}"/>

            </StackLayout>
        </Frame>
    </StackLayout>
</ContentPage>