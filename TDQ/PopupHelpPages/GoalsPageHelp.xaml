<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TDQ.PopupHelpPages.GoalsPageHelp" 
             BackgroundColor="Transparent">

    <StackLayout VerticalOptions="CenterAndExpand">
        <Frame Margin="50"
               Padding="30"
               BackgroundColor="#663A3A3A"
               CornerRadius="30"
               HasShadow="True">
            <StackLayout>
                <Label Text="Help"
                       TextColor="White"
                       HorizontalTextAlignment="Center"
                       FontSize="36"/>
                <Label Text="To set a goal you must first have created a group, which can be done on the groups page. After you have done this click the plus icon and create your goals group. This will create a new page in which you can see your strengths and weaknesses according to the feedback given from the athletes. You are also able to create personalised goals on this page from the feedback given."
                       TextColor="White"
                       HorizontalTextAlignment="Center"/>

                <Button Text="Okay"
                        x:Name="BtnOkay"
                        Clicked="BtnOkay_Clicked"
                        Style="{DynamicResource buttonStyle}"/>

            </StackLayout>
        </Frame>
    </StackLayout>
</ContentPage>