<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TDQ.PopupHelpPages.GroupPageHelp"  
             BackgroundColor="Transparent">

    <StackLayout VerticalOptions="CenterAndExpand">
        <Frame Margin="50"
               Padding="30"
               BackgroundColor="#663A3A3A"
               CornerRadius="30"
               HasShadow="True">
            <StackLayout>
                <Label Text="Help"
                       TextColor="White"
                       HorizontalTextAlignment="Center"
                       FontSize="36"/>
                <Label Text="In the groups page you are able to create groups to which you can send questionnaires to. To create a group click the plus icon, enter the name of the group and athlete emails for the group and set an image for your group."
                       TextColor="White"
                       HorizontalTextAlignment="Center"/>
                
                <Button Text="Okay"
                        x:Name="BtnOkay"
                        Clicked="BtnOkay_Clicked"
                        Style="{DynamicResource buttonStyle}"/>

            </StackLayout>
        </Frame>
    </StackLayout>
</ContentPage>