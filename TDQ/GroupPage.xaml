<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TDQ.GroupPage"
             x:Name="GroupContentPage">
    <ContentPage.Content>
        <StackLayout>      
            <!-- Later on when binding data, outer Grid to be made a DataTemplate for a CollectionView -->
            <Grid Margin="10,20,0,0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Image Source="ic_groups.png" Grid.Column="0" Margin="0,0,10,0" WidthRequest="64" HeightRequest="64"/>
                <Grid Grid.Column="1" Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Label Text="Group Name" TextColor="Black" Grid.Row="0" FontSize="16" FontAttributes="Bold"/>
                    <Label Text="Number of members" TextColor="Black" Grid.Row="1" />
                </Grid>
            </Grid>        
            <ImageButton x:Name="ImgBtnAddGroup"    
                    Source="ic_add_circle_outline.png"
                    HorizontalOptions="Center"
                    VerticalOptions="EndAndExpand"
                    BackgroundColor="Transparent"
                    Margin="0,0,0,10"
                    Clicked="ImgBtnAddGroup_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>