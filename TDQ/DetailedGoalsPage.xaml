<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TDQ.DetailedGoalsPage"
             Title="Goals">
    <ContentPage.Content>
        <StackLayout>
            <Image 
                Source="{Binding ImageFilePath}"
                WidthRequest="80"
                HeightRequest="80"
                Margin="0,20,0,0"
                Aspect="AspectFit"/>
            <Label Text="{Binding Name}"
                   TextColor="Black"
                   FontSize="Large"
                   HorizontalTextAlignment="Center"
                   FontAttributes="Bold"
                   Style="{DynamicResource labelStyle}"/>
            <Label Text="Strengths"
                   TextColor="Black"
                   Margin="10,20,0,10"
                   FontAttributes="Bold"
                   Style="{DynamicResource labelStyle}"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width = "Auto"/>
                    <ColumnDefinition Width = "Auto"/>
                </Grid.ColumnDefinitions>
                <BoxView BackgroundColor="Lime"
                       CornerRadius="90"
                       HeightRequest="15"
                       WidthRequest="15"
                       HorizontalOptions="StartAndExpand"
                       Margin="10,10,15,0"
                       Grid.Column="0"/>
                <Label Text="Strength #1"
                       TextColor="Black"
                       HorizontalTextAlignment="Start"
                       HorizontalOptions="StartAndExpand"
                       Grid.Column="1"
                       Style="{DynamicResource labelStyle}"/>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width = "Auto"/>
                    <ColumnDefinition Width = "Auto"/>
                </Grid.ColumnDefinitions>
                <BoxView BackgroundColor="Lime"
                       CornerRadius="90"
                       HeightRequest="15"
                       WidthRequest="15"
                       HorizontalOptions="StartAndExpand"
                       Margin="10,10,15,0"
                       Grid.Column="0"/>
                <Label Text="Strength #2"
                       TextColor="Black"
                       HorizontalTextAlignment="Start"
                       HorizontalOptions="StartAndExpand"
                       Grid.Column="1"
                       Style="{DynamicResource labelStyle}"/>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width = "Auto"/>
                    <ColumnDefinition Width = "Auto"/>
                </Grid.ColumnDefinitions>
                <BoxView BackgroundColor="Lime"
                       CornerRadius="90"
                       HeightRequest="15"
                       WidthRequest="15"
                       HorizontalOptions="StartAndExpand"
                       Margin="10,10,15,0"
                       Grid.Column="0"/>
                <Label Text="Strength #3"
                       TextColor="Black"
                       HorizontalTextAlignment="Start"
                       HorizontalOptions="StartAndExpand"
                       Grid.Column="1"
                       Style="{DynamicResource labelStyle}"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>