<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ic="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin"
             x:Class="TDQ.PopupPages.AddGroupPage"
             BackgroundColor="Transparent"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.ModalPresentationStyle="OverFullScreen">
    
    <StackLayout VerticalOptions="CenterAndExpand">
        
        <Frame Margin="50"
                 Padding="30"
                 BackgroundColor="#4C000000"
               CornerRadius="30">
            
            <StackLayout>
                <!-- Two Frames act as a circular border for ImageButton -->               
                <Frame 
                CornerRadius="90"
                Padding="3"
                Margin="0,0,0,10"
                BackgroundColor="White"
                HorizontalOptions="Center"
                VerticalOptions="StartAndExpand">

                    <Frame 
                    BackgroundColor="#4C000000"                    
                    CornerRadius="90"
                    Padding="6"
                    HorizontalOptions="Center"
                    VerticalOptions="StartAndExpand">

                        <ic:CircleImage
                        x:Name="ImgBtnAddGroupPhoto"    
                        Source="ic_add_photo.png"    
                        Aspect="AspectFill"
                        HorizontalOptions="Center"
                        VerticalOptions="StartAndExpand"
                        HeightRequest="84"
                        WidthRequest="84">

                            <ic:CircleImage.GestureRecognizers>
                                <TapGestureRecognizer
                                    Tapped="ImgBtnAddGroupPhoto_Clicked"
                                    NumberOfTapsRequired="1"/>
                            </ic:CircleImage.GestureRecognizers>
                        </ic:CircleImage>
                    </Frame>
                </Frame>
                
                <Entry Placeholder="Group Name" Text="{Binding Name}"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Entry 
                    x:Name="entryEmail"
                    Placeholder="Enter Email" 
                    Keyboard="Email"
                    Grid.Column="0"/>
                    
                    <ImageButton
                    x:Name="ImgBtnAddEmail"
                    Source="ic_add"
                    Grid.Column="1"
                    HorizontalOptions="End"
                    VerticalOptions="CenterAndExpand" 
                    BackgroundColor="Transparent"
                    Clicked="ImgBtnAddEmail_Clicked"/>
                </Grid>
                
                <ListView x:Name="emailList"
                        HorizontalOptions="CenterAndExpand"
                        VerticalOptions="Center"
                        HeightRequest="250"
                        Margin="0,10,0,0"
                        ItemsSource="{Binding EmailList}"
                        ItemSelected="emailList_ItemSelected">

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Label Text="{Binding}" TextColor="White"
                                       HorizontalTextAlignment="Center" HorizontalOptions="Center"
                                       Style="{StaticResource labelStyle}"/>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                
                <Button Text="Save" Clicked="BtnSave_Clicked" BackgroundColor="#4C000000" CornerRadius="30"/>
                
            </StackLayout>
        </Frame>
    </StackLayout>
</ContentPage>